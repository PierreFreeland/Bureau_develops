.article-left-white-bg {
  background-color: #fff;
  min-height: 100px;
  margin-bottom: 50px;
  padding-bottom: 20px;
}

.article-right-white-bg {
  background-color: #fff;
  min-height: 100px;
  padding-bottom: 20px;
}

.padding-left-right {
  padding-left: 15px;
  padding-right: 15px;
}

.article-header {
  padding-top: 30px;
}

.article-header-title {
  font-size: 28px;
  color: #5a2a60;
  font-weight: bold;
  margin-left: -30px;
}

.new-article-header-title {
  font-size: 28px;
  color: #5a2a60;
  font-weight: bold;
}

.article-header-subtitle {
  font-size: 28px;
  color: #5a2a60;
  font-weight: bold;
}
.border-another-article {
  border: 1px solid #e6e6e6;
  width: 90%;
  height: auto;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10px;
}
.border-another-article-title {
  min-height: 75px;
  padding-top:10px;
  font-weight: bold;
  color: #4d4d4d;
}
.border-another-article-body {
  margin-bottom: 10px;
}

.border-another-article, .border-another-article:visited, .border-another-article:hover {
  text-decoration: none;
  color: grey
}

.icon-set {
  margin-top: 30px;
  margin-bottom: 30px;
}

.adjust-icon {
  margin-left: 10px;
}

.article-subtitle {
  font-weight: bold;
  color: #4d4d4d;
  font-size: 16px;
}

.font-weight-normal {
  font-weight: normal;
}

.custom-link {
  color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
}

.custom-link:hover {
  color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
  text-decoration: underline;
}

.another-article-header-title-wrapper {
  height: 70px;
}

.new-another-article-header-title-wrapper {
  height: auto;
}
