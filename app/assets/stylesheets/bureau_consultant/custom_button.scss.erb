$main-color-light: <%= ENV['HUB_MAIN_COLOR_LIGHT'] || '#5a2861' %>;
$main-color-dark: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#47204d' %>;
$secondary-color-light: <%= ENV['HUB_SECONDARY_COLOR_LIGHT'] || '#f17b10' %>;
$secondary-color-dark: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#f17c0f' %>;

.btn-flex {
  display: flex;
  align-items: center;
  justify-content: center;
}

/////////////////////////////////// btn normal //////////////////////////////////////////////

.btn-orange, .btn-orange:hover, .btn-orange:focus,
.btn-violet, .btn-violet:hover, .btn-violet:focus,
.btn-grey, .btn-grey:hover, .btn-grey:focus,
.btn-lightgrey, .btn-lightgrey:hover, .btn-lightgrey:focus,
.btn-green, .btn-green:hover, .btn-green:focus,
.btn-grey, .btn-grey:hover, .btn-grey:focus,
.btn-rouge, .btn-rouge:hover, .btn-rouge:focus {
  width: 240px;
  margin-top: 30px;
  margin-bottom: 30px;
  padding-top: 10px;
  padding-bottom: 10px;
  font-family: 'Roboto', sans-serif;
  font-size: 15px;
  text-transform: uppercase;
  font-weight: 500;
  color: #fff;
}

.btn-orange {
  background:  #ef7c11;
}

.btn-violet {
  background: $main-color-light;
}

.btn-grey {
  background:  #4d4d4d;
}

.btn-rouge {
  background: #d3102a;
}


.btn-lightgrey {
  background: #cccccc;
}

.btn-green {
  background: #54cd70;
}

.btn-hover:hover, .btn-hover.hover {
  &.btn-orange, &.btn-violet, &.btn-grey, &.btn-yellow, &.btn-red, &.btn-rouge {
    background: transparent;
  }
  &.btn-orange {
    color: #ef7c11;
    border: 1px solid #ef7c11;
  }

  &.btn-violet {
    color: $main-color-light;
    border: 1px solid $main-color-light;
  }

  &.btn-grey {
    color: #4d4d4d;
    border: 1px solid #4d4d4d;
  }

  &.btn-yellow {
    color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
    border: 1px solid <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
  }

  &.btn-red {
    color: #d80039;
    border: 1px solid #d80039;
  }

  &.btn-rouge {
    color: #d3102a;
    border: 1px solid #d3102a;
  }
}

.btn-short, .btn-short:hover, .btn-short:focus, btn-short:visited, .btn-short:active {
  width: auto;
  min-width: 136px;
  padding-right:20px;
  padding-left:20px;
}

.btn-extrashort, .btn-extrashort:hover, .btn-extrashort:focus, btn-extrashort:visited, .btn-extrashort:active {
  width: auto;
  padding-right:20px;
  padding-left:20px;
}

.btn-extrashort.btn-block {
  width: 100%;
}

.btn-yellow, .btn-yellow:focus, .btn-yellow:active, .btn-yellow:visited {
  background: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
  color: white;
}
.btn-yellow:hover, .btn-yellow.hover {
  background: transparent;
  border: 1px solid <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
  color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
}

.btn-no-rounded {
  border-radius: 0;
}

/////////////////////////////////// btn empty //////////////////////////////////////////////

.btn-empty-orange, .btn-empty-orange:hover,
.btn-empty-grey, btn-empty-grey:hover,
.btn-empty-red, btn-empty-red:hover,
.btn-empty-violet, btn-empty-violet:hover {
  background: #fff;
  margin-top: 30px;
  margin-bottom: 30px;
  padding: 10px 20px 10px 20px;
  font-family: 'Roboto', sans-serif;
  font-size: 15px;
  text-transform: uppercase;
  font-weight: 500;
  min-width: 136px;
}

.btn-empty-orange, .btn-empty-orange:hover {
  color: #ef7c11;
  border: 1px solid #ef7c11;
}

.btn-empty-grey, .btn-empty-grey:hover {
  color: #4d4d4d;
  border: 1px solid #4d4d4d;
}

.btn-empty-violet, .btn-empty-violet:hover {
  color: $main-color-light;
  border: 1px solid $main-color-light;
}

.btn-empty-red, .btn-empty-red:hover {
  color: #d3102a;
  border: 1px solid #d3102a;
}

/////////////////////////////////// btn empty on click ///////////////////////////////

.btn-empty-orange:active {
  color : #fff;
  background-color: rgba(239, 124, 17, .5);
}

.btn-empty-grey:active {
  color : #fff;
  background-color: rgba(77, 77, 77, .5);
}

.btn-empty-violet:active {
  color : #fff;
  background-color: rgba(90, 40, 97, .5);
}

.btn-empty-red:active {
  color : #fff;
  background-color: rgba(211, 16, 42, .5);
}

.btn-wrapable {
  white-space: normal;
}

.btn-no-margin-top {
  margin-top: 0px !important;
}

.btn-no-margin-tb {
  margin-top: 0px !important;
  margin-bottom: 0px !important;
}

.btn-orange-static, .btn-orange-static:hover, .btn-orange:active {
  background:  #ef7c11;
  color: white;
}

.btn-full-width, .btn-full-width:hover, .btn-full-width:active  {
  width: 100%;
}

.btn-xs, .btn-xs:hover, .btn-xs:active {
  width: 80px;
  mid-width: 80px;
}

.btn-orange-round, .btn-orange-round:hover {
  width: 25px;
  height: 25px;
  background: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
  border-radius: 50%;
  color: white;
  font-size: 15px;
  font-weight: bold;
  margin-top: 10px;
  padding: 0 !important;
  padding-left: 2px !important;
}

.btn-icon-form {
  width: 18px;
  height: 18px;
  border-radius: 0;
}

.submit-icon {
  padding-left: 1px;
  padding-top: 3px;
  margin-top: 5px;
}

.fa.fa-check.btn-icon-form.submit-icon.vertical-center {
  margin-top: 15px;
}
