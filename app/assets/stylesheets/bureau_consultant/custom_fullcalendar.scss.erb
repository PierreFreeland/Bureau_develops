td.fc-day-top {
  text-align: center!important;
  line-height: 70px;
  font-size: 16px;
  padding-top: 2px;
  padding-bottom: 2px;
}
span.fc-day-number {
  text-align: center!important;
  line-height: 70px;
  float: none !important;
  padding: 0 !important;
}

span.fc-day-number.actived {
  display: inline-block;
  width: 40px;
  height: 40px;
  color: white;
  background-color: rgba(241, 124, 15, 0.5);
  border-radius: 20px;
  text-align: center;
  line-height: 40px !important;
}

.duplicate-calendar-view .selected-date {
  background-color: #ffffcc !important;
}

.selected-date {
  background-color: #ffffcc !important;
}

.month-year {
  font-size: 18px;
  color: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#5a2861' %>;
}
