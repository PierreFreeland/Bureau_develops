.dark-purple {
  color: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#8c2e60' %>;
  border-color: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#8c2e60' %>;
}

.bg-dark-purple {
  background: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#8c2e60' %>;
  border-color: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#8c2e60' %>;
}

.header-title {
  font-size: 32px;
  font-weight: bold;
}

.financial-operation-lists {
  margin-top: 30px;
  .financial-operation-boxes {
    position: relative;
    background-color: #fff;
    min-height: 169px;
    border-top: 1px solid;
    margin-bottom: 15px;
    .left-icon {
      display: inline-block;
      width: 151px;
      height: 169px;
      float: left;
      position: absolute;
      height: 100%;
      .icon-middle {
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -27px; // 50% of icon height
        margin-left: -27px; // 50% of icon width

      }
    }
    .right-content {
      margin-left: 151px;
      padding: 15px;
      .btn {
        margin-bottom: 15px;
      }
    }
    .financial-operation-title {
      font-size: 16px;
      margin-bottom: 15px;
    }
    .group-link {
      margin-top: 5px;
      a {
        color: #1a1a1a;
        &:hover {
          color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c10' %>;
          text-decoration: underline;
        }
      }
    }
  }
}

.same-grid-size {
  height: 230px;
}


@media (min-width: 767px) {
  .financial-operation-boxes {
    min-height: auto;
    height: auto;
  }
}

@media (min-width: 992px) {
  .financial-operation-boxes {
    height: 350px;
  }
}

@media (min-width: 1198px) {
  .financial-operation-boxes {
    height: 295px;
  }
}
