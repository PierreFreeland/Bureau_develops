#menu {
  height: 60px;
}

#menu ul {
  @media (min-width: 1450px) {
  }
}

#menu ul li {
  width: auto;
  height: 60px;
  @media (min-width: 1450px) {
    width: 140px;
  }
}

#menu ul li a {
  font-weight: 600;
}

#menu ul > li:hover a,
#menu ul > li.active a {
  background-color: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#48204e' %>;
}

#menu .menu-plus {
  top: 38px;
  margin-top: -15px;
  &:hover a {
    background: none;
  }
}

#menu ul .menu-plus .fa {
  color: #fff;
  background: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#f17c0f' %>;
  margin: 0;
  padding: 0;
  border-radius: 50%;
  padding: 20px 24px;
  border: 5px solid #fff;
  font-size: 36px;
  position: absolute;
  top: -38px;
  left: 15px;
}
#menu ul .menu-plus a:hover {
  background: none;
}

#menu .dropdown-menu {
  height: auto !important;
}
#menu li.dropdown-submenu a {
  width: auto;
}
#menu .dropdown-menu {
  background: <%= ENV['HUB_MAIN_COLOR_LIGHT'] || '#5a2861' %>;
  border: 0;
  border-radius: 0;
  text-transform: uppercase;
}
#menu .dropdown-menu li {
  text-align: left;
  width: auto;
  height: auto;
  display: block;

  &.disabled a {
    background: #f2f2f2 !important;
    color: #c1c1c1 !important;
    border-color: #c1c1c1 !important;
    border-width: 1px;
    cursor: not-allowed;
  }
}
#menu .dropdown-menu li a {
  border: 0;
  border-bottom: 1px solid #d3cfd1;
  padding: 12px;
}
#menu .dropdown-menu li.dropdown-submenu > a:after {
  font-family: FontAwesome;
  content: "\f054";
  position: absolute;
  top: 0;
  right: 0;
  margin-top: 14px;
  margin-right: 10px;
  font-size: 12px;
  font-weight: bold;
}
#menu ul > li .dropdown-menu li.dropdown-submenu a {
  padding-right: 30px;
}
#menu .dropdown-submenu {
  position: relative;
}
#menu .dropdown-submenu > .dropdown-menu {
  top: 0;
  left: 100%;
  margin-left: -1px;
}
#menu .dropdown-submenu:hover > .dropdown-menu {
  display: block;
}

