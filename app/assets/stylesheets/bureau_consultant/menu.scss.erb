    font-size: 14px;
    width: 100%;
  }
  #menu #menu-widgets-right {
    width: 100%;
    height: auto;
    li {
      display: inline-block;
      height: 52px;
      width: 32%;
      text-align: center;
      a {
        padding: 0;
        padding-top: 5px;
        padding-bottom: 5px;
      }
    }
  }

  .stat {
    display: inline-block;
  }

  #menu ul > li:hover:not(.active) > a {
    border-color: transparent !important;
    background-color: transparent;
  }
}

#menu ul.navbar-main {
  width: max-content;
  @media (min-width:1024px) and (max-width:1100px) {
    font-size: 12px;
  };
  @media (min-width:1101px) and (max-width:1180px) {
    font-size: 13px;
  };
}

.popin {
  box-sizing: border-box;
  position: absolute;
  top: 100%; // header height
  left: 50%;
  width: 100%;
  max-width: 40rem;
  transform: translateX(-50%);
  right: 0;
  transition: opacity 0.1s ease;

  ul {
    height: auto !important;

    li {
      width: 100% !important;
      height: auto !important;
    }

    li a:hover {
      background: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#f17c0f' %> !important;
      border-bottom: 2px solid <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#f17c0f' %> !important;
    }

    li:last-child a {
      border-bottom: none !important;
    }
  }

  // hide the popin if its <li> parent is not hovered
  li:not(:hover) & {
    top: 100vh;
    opacity: 0;
    transform: scale(0);
  }
}

