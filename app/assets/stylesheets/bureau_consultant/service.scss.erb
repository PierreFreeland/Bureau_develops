      border-right: 14px solid transparent;
      border-top: 12px solid #d9d9d9;
      content: '';
      top: 0;
      left: 50%;
      margin-left: -14px;
    }
    &:after {
      position: absolute;
      border-left: 14px solid transparent;
      border-right: 14px solid transparent;
      border-top: 12px solid #ffffff;
      content: '';
      top: -1px;
      left: 50%;
      margin-left: -14px;
    }
