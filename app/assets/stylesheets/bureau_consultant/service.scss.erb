ul.list-with-orange-arrow, ul.list-with-arrow-rounded {
  padding: 0;
  padding-left: 15px;
  li {
    position: relative;
    list-style: none;
    &:before {
      content: "\f061";
      font-family: FontAwesome;
      position: absolute;
      top: 0;
      left: 0;
      margin-top: 2px;
      font-size: 10px;
      color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#f17c0f' %>;
      list-style: none;
      margin-left: -15px;
    }
    .dark-purple &:before {
      color: <%= ENV['HUB_MAIN_COLOR_LIGHT'] || '#5a2861' %>;
    }
    .purple &:before {
      color: #8d2c61;
    }
    .yellow &:before {
      color: #d89015;
    }
    .red &:before {
      color: <%= ENV['HUB_MAIN_COLOR_DARK'] || '#c13856' %>;
    }
    .orange &:before {
      color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#ef7c11' %>;
    }
    a {
      color: black;
      &:hover {
        color: <%= ENV['HUB_SECONDARY_COLOR_DARK'] || '#f17c0f' %>;
      }
    }
  }
  &.active {
    background: #f2f2f2;
  }
}
ul.list-with-arrow-rounded {
  li:before {
    content: "\f138";
  }
}

