.simulation-white-bg {
  background-color: #fff;
  min-height: 100px;
}

.simulation-header-title {
  font-weight: bold;
  font-size: 24px;
  color: <%= ENV['HUB_MAIN_COLOR_LIGHT'] || '#5a2861' %>;
  width: 355px;
  margin-left: auto;
  margin-right: auto;
  display: block;
}

.simulation-description {
  color: #4d4d4d;
  margin-top: 20px;
  text-align: center;
}

.simulation-wrapper {
  padding-left: 15px;
  padding-right: 15px;
}

.simulation-left-accodian-bg {
  background-color: #f7f4f7;
}

.simulation-menu-wrapper {
  padding-left: 15px;
  padding-right: 15px;
  padding-top: 30px;
}


.bullet-circle {
  width: 30px;
  height: 30px;
  background: <%= ENV['HUB_MAIN_COLOR_LIGHT'] || '#5a2861' %>;
  -moz-border-radius: 30px;
  -webkit-border-radius: 30px;
  border-radius: 30px;
  color: #fff;
  padding-left: 11px;
  padding-top: 5px;
  display: inline-block;
}

.bullet-circle-inactive {
  color: #fff;
  background: #ccc;
}

.bullet-circle-done {
  background: #fff;
  color: #5a2a60;
  border: 1px solid #5a2a60;
}

.bullet-label {
  display: inline-block;
  color: <%= ENV['HUB_MAIN_COLOR_LIGHT'] || '#5a2861' %>;
  padding-left: 10px;
  font-weight: 600;
}

.bullet-label-inactive {
  color: #cccccc
}

.bullet-label-done {
  color: #5a2a60;
}

.choices {
  border-bottom: 1px solid #4d4d4d;
  padding-bottom: 20px;
}

.choice-header-wrapper{
  padding-top: 20px;
  padding-left: 10px;
}

.follow-choice {
  padding-top: 10px;
  padding-bottom: 10px;
}


.simulation-header-subtitle {
  font-size: 18px;
  font-weight: bold;
  width: 200px;
  margin-left: auto;
  margin-right: auto;
  display: block;
  padding-top: 40px;
  text-align: center;
}

.simulation-right-description {
  color: #4d4d4d;
  margin-top: 20px;
  text-align: left;
}

.form-section {
  margin-top:20px;
}

.label-and-error {
  margin-top: 10px;
}

.custom-label{
  font-weight: bold;
  color: #4d4d4d;
}

.err-msg {
  position: absolute;
  color: #ff0000;
  left: 40%;
}

.btn-wrapper {
  margin-top:40px;
  width:240px;
  margin-right: auto;
  margin-left: auto;
}

.red-btn {
  min-width : 240px;
  background : #d3102a;
  color: #fff;
  Padding-top:10px;
  Padding-bottom:10px;
  font-size: 15px;
  text-transform : uppercase;
  font-weight: 500;
}

.yellow-btn{
  min-width : 240px;
  background : #ef7f11;
  color: #fff;
  Padding-top:10px;
  Padding-bottom:10px;
  font-size: 15px;
  text-transform : uppercase;
  font-weight: 500;
  margin-top: 20px;
}

.grey-btn{
  min-width : 240px;
  background : #4d4d4d;
  color: #fff;
  Padding-top:10px;
  Padding-bottom:10px;
  font-size: 15px;
  text-transform : uppercase;
  font-weight: 500;
  margin-top: 20px;
}

.seperate-dot-line-frame {
  position: absolute;
  border-right: 1px dotted #5a2a60;
  width: 10px;
  height: 80px;
  left: 50%;
}

.seperate-dot-line-text {
  position: absolute;
  width: 20px;
  height: 20px;
  background: #f7f4f7;
  top: 38%;
  text-align: center;
}

.horizontal-seperate {
  width:100%;
  text-align:center;
  border-bottom: 1px dotted #5a2a60;
  line-height:0.1em;
  margin:20px 0 20px;

}
.horizontal-seperate span { background:#f7f4f7; padding:0 10px; }

.choice-sub-title {
  text-align: center;
  font-weight: bold;
  color: #4d4d4d;
}

.text-smaller{
  font-size:12px;
}

.simulation-label {
  font-weight: bold;
  color: #5a2a60;
  height:34px;
}

.simulation-input {
  background: #f7f4f7;
  border: 1px solid #5a2a60 !important;
  text-align: center;
}

.space-top-20 {
  margin-top: 20px;
}

.space-top-10 {
  margin-top: 10px;
}

.display-none {
  display: none;
}

.summary {
  z-index: 1;
  position: absolute;
  right:0%;
  margin-top: 20px;
  margin-right:15px;
  background-color: #5a2a60;
  color: #fff;
  font-size: 12px;
  width: 350px;
  line-height: 1.1;
  padding-bottom: 10px;
  box-shadow: -30px 0px 10px 1px #fff;
}

.summary-md {
  background-color: #5a2a60;
  color: #fff;
  font-size: 12px;
  line-height: 1.1;
  padding-bottom: 10px;
  width: 80%;
  margin-right: auto;
  margin-left: auto;
}

.summary-data-frame {
  height:40px;
}
.table-stype{
  display: table;
}
.summary-last {
  width: 250px;
  display:inline-block;
}
.summary-border {
  border: 1px solid #fff;
}

.summary-btn {
  width: 300px;
  margin-top: 20px;
}



.panel-heading:hover {
  background-color: #efeaef;
}

.panel-title > a:before {
  float: right !important;
  font-family: FontAwesome;
  content:"\f078";
  padding-right: 5px;
}
.panel-title > a.collapsed:before {
  float: right !important;
  content:"\f054";
}
.panel-title > a:hover,
.panel-title > a:active,
.panel-title > a:focus  {
  text-decoration:none;
}

.divTable{
  display: inline-block;
}
.divTableRow {
  display: table-row;
}
.divTableCell, .divTableHead {
  border: 1px solid #fff;
  display: table-cell;
  padding: 3px 10px;
}
.divTableFoot {
  display: table-footer-group;
  font-weight: bold;
}
.divTableBody {
  display: table-row-group;
}

.icon-close {
  font-weight: bold;
  margin-right: 10px;
  margin-top:10px;
  cursor: pointer;
  color: #4d4d4d;
}

.recall-success {
  min-height: 470px;
}
