<div class="row with-bottom-menu">
  <div class="col-xs-12">

    <span class="contract-reqest-title hide">FRAIS REGLES</span>

    <%= render 'bureau_consultant/shared/paginate', collection: @accounts %>

    <div class="form-group m-b-15">
      <%= form_tag paid_costs_accounts_path, method: :get, :class => 'form-inline form-filters' do %>
        <%= date_field_tag 'q[frais_date_gteq]', {}, :class => 'shorter form-control', value: params[:q][:frais_date_gteq] %>
        <span class="text-bigger">Ã </span>
        <%= date_field_tag 'q[frais_date_lteq]', {}, :class => 'datepicker shorter form-control form-group', value: params[:q][:frais_date_gteq] %>
        <%= submit_tag 'Filtre', class: 'btn btn-violet btn-short btn-no-margin hide' %>
      <% end %>
    </div>

    <div class="hide account_export_xls col-xs-2 col-md-2 col-lg-2 btn btn-orange btn-short btn-no-rounded pull-right" style="margin-top:0px; margin-bottom: 0px;">
      <i class="fa fa-external-link p-r-10"></i>Exporter
    </div>

    <div class="data-row-wrapper">
      <%= render partial: 'paid_costs_table_row', collection: @accounts, as: :account %>
    </div>

    <%= render 'bureau_consultant/shared/paginate', collection: @accounts %>

  </div>
</div>

<%= render 'bureau_consultant/shared/mobile_top_nav',
           nav_color: ENV['HUB_MAIN_COLOR_DARK'] || '#8c2e60',
           nav_title: 'frais regles',
           nav_left: link_to(image_tag('bureau_consultant/icon-mobile-nav-back', class: 'mobile-nav-icon'), '#', onclick: 'navGoBack();'),
           nav_right: link_to(image_tag('bureau_consultant/icon-mobile-nav-close', class: 'mobile-nav-icon'), home_index_path) %>

<%= render 'bureau_consultant/shared/mobile_bottom_nav',
           content: link_to('Filtrer', '#filters', onclick: '$("form.form-filters").trigger("submit");'),
           nav_color: '#4e4e4e' %>

<style>
  .data-row-wrapper {
    margin-bottom: 15px;
  }

  .data-row {
    background: #f2f2f2;
    border-bottom: 1px solid <%= ENV['HUB_MAIN_COLOR_DARK'] || '#8c2e60' %>;
    margin: 0 -10px;
    position: relative;
  }

  .data-row:nth-child(odd) {
    background: #f5ecf1 !important;
  }

  .data-row .file-download {
    position: absolute;
    top: 0;
    right: 0;
  }

  .data-row .file-download .btn {
    margin: 0;
    width: auto;
    margin-right: 10px;
    margin-top: 15px;
  }

  .pagination.visible-xs {
    margin-bottom: 15px !important;
  }

</style>
