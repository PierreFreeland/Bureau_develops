<div class="row">
  <div class="col-sm-6 col-md-4">
    <%= form_for(@cas_authentication, url: change_password_path(reset_password_token: params[:reset_password_token]), html: { method: :put }) do |f| %>
        <div class="form-group">
          <%= f.label :password, class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: 'off' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'control-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Validation', class: 'btn btn-success' %>
        </div>
    <% end %>
  </div>
</div>