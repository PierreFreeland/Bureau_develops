<div class="row m-b-40">
  <div class="col-xs-12">
    <div class="row grid-big-right my-services search-page">
      <div class="col-left">
        <div class="content-wrapper bg-white m-b-20">
          <%= render 'left_panel' %>
        </div>
      </div>

      <div class="col-right">
        <div class="row">
          <div class="col-xs-12 col-md-7">
            <div class="bg-white">

              <div class="btn-group-1-col-block m-t-0">
                <div class="service-all-wrapper">
                  <ul class="panel-group service-all text-bold" id="accordion">
                    <% @cms_pages.each do |solution_group, cms_pages| %>
                        <% next if cms_pages.size == 0 %>
                        <li class="panel panel-default service-all-boxes <%= render_color_class(solution_group) %> accordion">
                          <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" data-target="#service-all-collapse-<%= solution_group %>">
                            <div class="left-icon">
                              <div class="icon-middle">
                                <div class="icon-middle <%= render_icon_class(solution_group) %>"></div>
                              </div>
                            </div>
                            <%= link_to cms_pages.first.category_name, '#', class: 'right-content' %>
                          </div>
                          <div class="panel-body panel-collapse collapse" id="service-all-collapse-<%= solution_group %>">
                            <ul class="list-with-arrow-rounded text-normal">
                              <% cms_pages.each do |cms_page| %>
                                  <li><%= link_to cms_page.solution_name, service_path(cms_page) %></li>
                              <% end %>
                            </ul>
                          </div>
                        </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'bureau_consultant/shared/mobile_top_nav',
           nav_color: '#d80039',
           nav_title: 'Toutes nos solutions',
           nav_left: link_to(image_tag('bureau_consultant/icon-mobile-nav-back', class: 'mobile-nav-icon'), '#', onclick: 'navGoBack()'),
           nav_right: link_to(image_tag('bureau_consultant/icon-mobile-nav-close', class: 'mobile-nav-icon'), home_index_path) %>

<style type="text/css">
  /* ------ Custom styles for mobile app ------ */

  .mobile-app .my-services {
    /*padding: 0 15px;*/
    margin: -10px;
  }

  .mobile-app .my-services .col-left {
    display: none;
  }

  .mobile-app .my-services .keyword-search {
    display: none;
  }
  .mobile-app .my-services .search-control {
    display: table;
    width: 100%;
  }
  .mobile-app .my-services .keyword-search .search-control .form-group {
    display: table-cell;
    vertical-align: middle;
    padding-right: 10px;
    width: 100%;
  }
  .mobile-app .my-services .keyword-search .search-control input[type=submit] {
    display: table-cell;
    vertical-align: middle;
    position: static;
  }

  .mobile-app .my-services .discover-block {
    display: none;
  }
</style>

<script type="text/javascript" charset="utf-8">
  $(".mobile-cols-wrapper").removeClass('with-menus');
</script>
