<script>
    function number_pages() {
        var vars={};
        var x=document.location.search.substring(1).split('&');
        for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = decodeURIComponent(z[1]);}
        var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
        for(var i in x) {
            var y = document.getElementsByClassName(x[i]);
            for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
        }
    }
</script>

<body onload="number_pages()">
  <div class="footer text-italic" style="padding-top: 15px;">
    <span style="float: left; position: absolute">
      Matricule : <%= @consultant.default_payroll_id %> - Déclaration de dépenses de fonctionnement du mois de <%= I18n.t("date.month_names")[@statement_of_operating_expenses_request.month].capitalize %> <%= @statement_of_operating_expenses_request.year %>
    </span>

    <div class="text-center">
      Page <span class="page"></span>/<span class="topage"></span>
    </div>
  </div>
</body>
